<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="50dp"
    tools:context=".bedrifter.BedriftProfilActivity">


    <EditText
        android:id="@+id/student_navn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Navn"
        android:background="#FFF"
        android:inputType="textPersonName" />



    <EditText
        android:id="@+id/student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_navn"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:background="#FFF"
        android:inputType="textShortMessage" />

    <EditText
        android:id="@+id/student_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:background="#FFF"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName" />




    <EditText
        android:id="@+id/student_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Kompetanse ex: IT,Butikkmedarbeider"
        android:background="#FFF"
        android:inputType="textShortMessage" />



    <Button
        android:id="@+id/lagre_student_knapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:text="Lagre" />




</LinearLayout>